program factorial(n : integer, answer : integer);

  function factorialaps(i : integer, j : integer) : integer
    begin
      if n = 0 then
        return answer
      else
        return factorial( n-1, answer * n )
    end;

    function factorial(x : integer) : integer
      begin
        if x = 0 then
          return 0
        else
          if x = 1 then
            return 1
          else
            return factorial( x, 1 )
      end;

begin
  return factorial(10)
end.
