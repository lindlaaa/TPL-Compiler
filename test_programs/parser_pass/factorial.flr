program factorial(n : integer, answer : integer);

  function factorialaps(i : integer, j : integer) : integer
    begin
      return if n = 0 then answer
      else
        factorial( n-1, answer * n )
    end;

    function factorial(x : integer) : integer
      begin
        return if x = 0 then 0
                else
                  if x = 1 then 1
                  else factorial( x, 1 )
      end;

begin
  return factorial(10)
end.
